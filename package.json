{
  "name": "onchain",
  "version": "1.0.0",
  "description": "On Chain library for Solidity",
  "files": [
    "build",
    "contracts",
    "test/behaviors",
    "solidity",
    "token"
  ],
  "scripts": {
    "compile": "truffle compile",
    "console": "truffle console",
    "coverage": "scripts/coverage.sh",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:fix": "npm run lint:js:fix",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "test": "npm run compile && scripts/test.sh",
    "flatten": "node_modules/.bin/truffle-flattener"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenZeppelin/zeppelin-solidity.git"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "smart",
    "contracts",
    "security",
    "assets"
  ],
  "author": "Cyril Lapinte <cyril.lapinte@openfiz.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sirhill/onchain/issues"
  },
  "homepage": "https://github.com/sirhill/onchain",
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "ethereumjs-util": "^6.2.0",
    "ganache-cli": "^6.9.1",
    "solhint": "^3.0.0-rc.7",
    "solidity-coverage": "^0.7.4",
    "solidity-docgen": "^0.4.1",
    "truffle": "^5.1.20",
    "truffle-flattener": "^1.4.2",
    "@truffle/hdwallet-provider": "^1.0.34"
  }
